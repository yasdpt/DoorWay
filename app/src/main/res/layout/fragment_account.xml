<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context=".fragments.AccountFragment">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="50dp"
                >

            <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            app:layout_constraintEnd_toEndOf="parent"
                                                            android:layout_marginEnd="8dp"
                                                            app:layout_constraintStart_toStartOf="parent"
                                                            android:layout_marginStart="8dp"
                                                            app:layout_constraintHorizontal_bias="0.0"
                                                            app:layout_constraintTop_toTopOf="parent"
                                                            android:id="@+id/materialRippleLayout2"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="16dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/btnMyAds">
                    <ImageButton
                            android:background="@color/transparent"
                            android:layout_marginLeft="16dp"
                            app:srcCompat="@drawable/ic_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/imageButton222"/>
                    <TextView
                            android:text="@string/tv_my_ads"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/grey_1000"
                            android:textAlignment="center"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                    android:text="@string/tv_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/viewDividerOne" android:textSize="14sp"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:id="@+id/view2" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/materialRippleLayout2" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="@string/tv_your_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccDetailTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/colorAccent" android:textSize="14sp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view2"/>
            <TextView
                    android:text="@string/tv_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccNameTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccDetailTitle" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:textSize="14sp"/>
            <TextView
                    android:text="یاسین فولادی"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccFullName"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccDetailTitle"
                    app:layout_constraintStart_toEndOf="@+id/tvAccNameTitle"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    android:textColor="@android:color/black" android:textSize="14sp"/>
            <Button
                    android:text="@string/btn_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_purple_a400"
                    android:id="@+id/btnAccLogOut"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textColor="@color/white" android:textSize="12sp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/view2"/>
            <TextView
                    android:text="@string/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccUserTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccNameTitle"
                    android:textSize="14sp" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvAccNameTitle"/>
            <TextView
                    android:text="yasinf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccUsername"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccFullName"
                    app:layout_constraintStart_toEndOf="@+id/tvAccUserTitle"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    android:textColor="@android:color/black" android:textSize="14sp"/>
            <TextView
                    android:text="@string/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccEmailTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccUserTitle"
                    android:layout_marginTop="8dp" android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvAccUserTitle"/>
            <TextView
                    android:text="fouladiyas@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccEmail"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccUsername"
                    app:layout_constraintStart_toEndOf="@+id/tvAccEmailTitle"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/black" android:textSize="14sp" android:layout_marginTop="8dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"
                    app:layout_constraintTop_toBottomOf="@+id/tvAccEmail" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:id="@+id/viewDividerOne"/>

            <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:layout_marginTop="8dp"
                                                            app:layout_constraintTop_toBottomOf="@+id/textView12"
                                                            app:layout_constraintEnd_toEndOf="parent"
                                                            android:layout_marginEnd="8dp"
                                                            app:layout_constraintStart_toStartOf="parent"
                                                            android:layout_marginStart="16dp"
                                                            android:id="@+id/materialRippleLayout">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/btnMyCity">
                    <TextView
                            android:text="@string/tv_my_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView16"
                            android:layout_marginLeft="8dp"
                            android:textSize="14sp"/>
                    <TextView
                            android:text="دورود"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvAccCity"
                            android:textColor="@android:color/black" android:textSize="14sp"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_300"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:id="@+id/view3" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/materialRippleLayout" android:layout_marginTop="8dp"/>

            <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:id="@+id/materialRippleLayout5"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            app:layout_constraintTop_toBottomOf="@+id/view3"
                                                            app:layout_constraintStart_toStartOf="parent"
                                                            android:layout_marginStart="8dp"
                                                            app:layout_constraintEnd_toEndOf="parent"
                                                            android:layout_marginEnd="8dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/btnPrivacyPolicy">
                    <ImageButton
                            android:background="@color/transparent"
                            android:layout_marginLeft="16dp"
                            app:srcCompat="@drawable/ic_support"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/imageButton"/>
                    <TextView
                            android:text="@string/tv_privacy_policy"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/grey_1000"
                            android:textAlignment="center"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <com.balysv.materialripple.MaterialRippleLayout android:layout_width="match_parent"
                                                            android:layout_height="wrap_content"
                                                            android:id="@+id/materialRippleLayout55"
                                                            android:padding="8dp"
                                                            android:layout_marginTop="8dp"
                                                            app:layout_constraintTop_toBottomOf="@+id/materialRippleLayout5"
                                                            app:layout_constraintEnd_toEndOf="parent"
                                                            android:layout_marginEnd="8dp"
                                                            app:layout_constraintStart_toStartOf="parent"
                                                            android:layout_marginStart="8dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/btnAboutUs">
                    <ImageButton
                            android:background="@color/transparent"
                            android:layout_marginLeft="16dp"
                            app:srcCompat="@drawable/ic_info"
                            android:layout_width="wrap_content"

                            android:layout_height="match_parent" android:id="@+id/imageButton455"/>
                    <TextView
                            android:text="@string/tv_about_us"
                            android:gravity="center_vertical|center_horizontal|center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="14sp"
                            android:textColor="@color/grey_1000"
                            android:textAlignment="center"/>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAccLogin"
                    app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="64dp" android:paddingStart="16dp"
                    android:paddingLeft="16dp" android:paddingEnd="16dp" android:paddingRight="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>